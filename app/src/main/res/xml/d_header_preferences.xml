<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <Preference
        android:fragment="de.heoegbr.diabeatit.ui.SettingsActivity$GeneralFragment"
        app:icon="@drawable/ic_general"
        app:key="general_settings_header"
        app:title="General" />

    <Preference
        android:fragment="de.heoegbr.diabeatit.ui.SettingsActivity$SyncFragment"
        app:icon="@drawable/ic_sync"
        app:key="sync_settings_header"
        app:title="@string/settings_sync" />

    <Preference
        android:fragment="de.heoegbr.diabeatit.ui.SettingsActivity$PredictionsFragment"
        app:icon="@drawable/d_ic_settings_alt"
        app:key="model_settings_header"
        app:title="@string/settings_prediction" />

    <PreferenceCategory
        app:key="about"
        app:title="@string/settings_about_title">

        <Preference
            app:key="feedback"
            app:summary="@string/settings_about_feedback_summary"
            app:title="@string/settings_about_feedback_title" />

        <Preference
            app:key="version"
            app:summary="0"
            app:title="@string/settings_about_version_title" />
    </PreferenceCategory>

</PreferenceScreen>
