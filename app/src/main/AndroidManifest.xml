<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.heoegbr.diabeatit">


    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_MMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SEND_MMS" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.android.permission.PROVIDE_BACKGROUND" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="com.dexcom.cgm.EXTERNAL_PERMISSION" />

    <application
        android:name=".DiaBEATitApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name=".ui.HomeActivity"
            android:label="DIABEATIT">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <!--<action android:name="info.nightscout.androidaps.OPEN_ASSISTANT" />-->

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.ManualNoteActivity"
            android:theme="@style/diabeatit"
            android:parentActivityName=".ui.HomeActivity"/>

        <service
            android:name=".service.ForegroundService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".ui.DiaryActivity"
            android:theme="@style/diabeatit"
            android:label="@string/nav_navigation_log"
            android:parentActivityName=".ui.HomeActivity"/>

        <activity android:name=".ui.SettingsActivity"
            android:theme="@style/diabeatit"
            android:parentActivityName=".ui.HomeActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.HomeActivity"/>
        </activity>

        <activity
            android:name=".ui.ManualSportsEntryActivity"
            android:theme="@style/diabeatit"
            android:parentActivityName=".ui.HomeActivity"/>

        <activity
            android:name=".ui.ManualCarbsEntryActivity"
            android:theme="@style/diabeatit"
            android:parentActivityName=".ui.HomeActivity"/>

        <activity
            android:name=".ui.ManualInsulinEntryActivity"
            android:theme="@style/diabeatit"
            android:parentActivityName=".ui.HomeActivity"/>

        <activity
            android:name=".ui.AlertHistoryActivity"
            android:label="@string/title_activity_alert_history"
            android:parentActivityName=".ui.HomeActivity"
            android:theme="@style/diabeatit"/>
    </application>
</manifest>
